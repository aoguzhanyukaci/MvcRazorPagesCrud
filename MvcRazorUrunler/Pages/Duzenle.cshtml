@page
@model MvcRazorUrunler.Pages.DuzenleModel

@{
    ViewData["Title"] = "Duzenle";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Ürün Düzenle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Urun.Id" />
            <div class="form-group">
                <label asp-for="Urun.UrunAd" class="control-label"></label>
                <input asp-for="Urun.UrunAd" class="form-control" />
                <span asp-validation-for="Urun.UrunAd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Urun.BirimFiyat" class="control-label"></label>
                <input asp-for="Urun.BirimFiyat" class="form-control" />
                <span asp-validation-for="Urun.BirimFiyat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-danger" asp-page="./Index">Geri Dön</a>
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}